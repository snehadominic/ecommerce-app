@page
@model eCommerce.Pages.Panel.StatisticsModel

@{
    ViewData["Title"] = "Statistics";
}
<div class="contenti">
    <div class="row">
        <div class="col-md-6">
            <h6>Top 10 users</h6>
            <table class="table table-condensed table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Orders</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Users.Count == 0)
                    {
                        <tr>
                            <td colspan="5" class="text-center">There us no user.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model.Users)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.FullName</td>
                                <td>@item.Email</td>
                                <td>@item.Orders</td>
                                <td><a asp-page="/Profile/Index" asp-route-userId="@item.Id" class="btn btn-primary"><i class="fa fa-eye"></i></a></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <h6>Top 10 products</h6>
            <table class="table table-condensed table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Sold</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Products.Count == 0)
                    {
                        <tr>
                            <td colspan="6" class="text-center">There is no product.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model.Products)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.ProductName</td>
                                <td>@item.Quantity</td>
                                <td>€ @item.Price</td>
                                <td>@item.Sold</td>
                                <td><a asp-page="/Producti/Index" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa fa-eye"></i></a></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <h6>Top 10 carts (Cost)</h6>
            <table class="table table-condensed table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Ordered Date</th>
                        <th>User</th>
                        <th>Status</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.CostOrders.Count == 0)
                    {
                        <tr>
                            <td colspan="6" class="text-center">There is no product.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model.CostOrders)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.OrderedDate</td>
                                <td><a asp-page="/Profile/Index" asp-route-userId="@item.UserId">@item.UsersFullName</a></td>
                                <td>@item.Status</td>
                                <td>€ @item.TotalPrice.ToString("0.00")</td>
                                <td><a asp-page="/Cart/View" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa fa-eye"></i></a></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <h6>Top 10 carts (Products)</h6>
            <table class="table table-condensed table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Ordered Date</th>
                        <th>User</th>
                        <th>Status</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.ProductOrders.Count == 0)
                    {
                        <tr>
                            <td colspan="6" class="text-center">There is no product.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model.ProductOrders)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.OrderedDate</td>
                                <td><a asp-page="/Profile/Index" asp-route-userId="@item.UserId">@item.UsersFullName</a></td>
                                <td>@item.Status</td>
                                <td>€ @item.TotalPrice.ToString("0.00")</td>
                                <td><a asp-page="/Cart/View" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa fa-eye"></i></a></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>